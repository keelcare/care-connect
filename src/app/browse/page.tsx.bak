"use client";

import React from 'react';
import Link from 'next/link';
import { Search, SlidersHorizontal, MapPin } from 'lucide-react';
import { useAuth } from '@/context/AuthContext';
import { useToast } from '@/components/ui/ToastProvider';
import { Button } from '@/components/ui/button';
import { api } from '@/lib/api';
import { User } from '@/types/api';
import { ProfileCard } from '@/components/features/ProfileCard';
import { FilterSidebar } from '@/components/features/FilterSidebar';
import ParentLayout from '@/components/layout/ParentLayout';
import { usePreferences } from '@/hooks/usePreferences';
import { Input } from '@/components/ui/Input';

export default function BrowsePage() {
    const { user } = useAuth();
    const { addToast } = useToast();
    const [nearbyNannies, setNearbyNannies] = React.useState<User[]>([]);
    const [loading, setLoading] = React.useState(true);
    const [error, setError] = React.useState<string | null>(null);
    const [showMobileFilters, setShowMobileFilters] = React.useState(false);

    React.useEffect(() => {
        const fetchNearby = async () => {
            try {
                let lat: number | null = null;
                let lng: number | null = null;

                // 1. Try to get location from user profile first
                if (user?.profiles?.lat && user?.profiles?.lng) {
                    lat = parseFloat(user.profiles.lat);
                    lng = parseFloat(user.profiles.lng);
                }

                // 2. If not in profile, try browser geolocation
                if (lat === null || lng === null) {
                    if (navigator.geolocation) {
                        try {
                            const position = await new Promise<GeolocationPosition>((resolve, reject) => {
                                navigator.geolocation.getCurrentPosition(resolve, reject);
                            });
                            lat = position.coords.latitude;
                            lng = position.coords.longitude;
                        } catch (e) {
                            console.log("Geolocation permission denied or failed", e);
                        }
                    }
                }

                if (lat !== null && lng !== null) {
                    const response = await api.location.nearbyNannies(lat, lng, 50); // 50km radius for browse page

                    // Map nearby nannies to User type
                    const mappedNannies = response.data.map(n => ({
                        ...n,
                        profiles: n.profile,
                        nanny_details: n.nanny_details
                    } as unknown as User));

                    setNearbyNannies(mappedNannies);
                } else {
                    setError("Please set your location in your profile to see nearby caregivers.");
                }
            } catch (err) {
                console.error(err);
                setError("Failed to load nearby caregivers.");
            } finally {
                setLoading(false);
            }
        };

        if (user) {
            fetchNearby();
        }
    }, [user]);

    // Helper to cycle through pastel variants
    const getVariant = (index: number) => {
        const variants: ('purple' | 'blue' | 'green' | 'pink')[] = ['purple', 'blue', 'green', 'pink'];
        return variants[index % variants.length];
    };

    return (
        <ParentLayout>
            <div className="min-h-screen bg-white pb-20 md:pb-8">
                <main className="max-w-[1600px] mx-auto px-4 md:px-8 pt-8">

                    {/* Top Bar: Search & Tags */}
                    <div className="flex flex-col md:flex-row gap-6 mb-8">
                        <div className="relative flex-1">
                            <Search className="absolute left-4 top-1/2 -translate-y-1/2 text-neutral-400" size={20} />
                            <input
                                type="text"
                                placeholder="Search by role, name, or keyword..."
                                className="w-full h-14 pl-12 pr-4 rounded-2xl border border-neutral-200 bg-white text-neutral-900 placeholder:text-neutral-400 focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all shadow-sm"
                            />
                        </div>
                        <div className="flex gap-3 overflow-x-auto pb-2 md:pb-0 no-scrollbar">
                            <button className="h-14 px-6 rounded-2xl border border-neutral-200 bg-white hover:bg-neutral-50 whitespace-nowrap font-medium flex items-center gap-2">
                                <MapPin size={18} />
                                United States
                            </button>
                            <button className="h-14 px-6 rounded-2xl border border-neutral-200 bg-white hover:bg-neutral-50 whitespace-nowrap font-medium">
                                5+ years experience
                            </button>
                            <Button
                                className="md:hidden h-14 px-6 rounded-2xl bg-neutral-900 text-white"
                                onClick={() => setShowMobileFilters(!showMobileFilters)}
                            >
                                <SlidersHorizontal size={18} />
                            </Button>
                        </div>
                    </div>

                    <div className="flex gap-8">
                        {/* Sidebar Filters (Desktop) */}
                        <aside className="hidden md:block w-80 shrink-0">
                            <FilterSidebar />
                        </aside>

                        {/* Main Grid */}
                        <div className="flex-1">
                            {loading ? (
                                <div className="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
                                    {[1, 2, 3, 4, 5, 6].map((i) => (
                                        <div key={i} className="h-[400px] bg-neutral-100 rounded-[32px] animate-pulse"></div>
                                    ))}
                                </div>
                            ) : error ? (
                                <div className="bg-red-50 text-red-600 p-8 rounded-[32px] text-center">
                                    <p>{error}</p>
                                    <Button className="mt-4" onClick={() => window.location.reload()}>Try Again</Button>
                                </div>
                            ) : nearbyNannies.length === 0 ? (
                                <div className="text-center py-20 bg-neutral-50 rounded-[32px]">
                                    <h3 className="text-xl font-bold text-neutral-900 mb-2">No caregivers found nearby</h3>
                                    <p className="text-neutral-500 mb-6">Try adjusting your filters or location.</p>
                                    <Link href="/dashboard/profile">
                                        <Button>Update Location</Button>
                                    </Link>
                                </div>
                            ) : (
                                <div className="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
                                    {nearbyNannies.map((nanny: any, index: number) => (
                                        <ProfileCard
                                            key={nanny.id}
                                            name={`${nanny.profiles?.first_name || 'Caregiver'} ${nanny.profiles?.last_name || ''}`}
                                            role="Nanny" // Could be dynamic based on data
                                            location={nanny.profiles?.address || 'Location not specified'}
                                            hourlyRate={Number(nanny.nanny_details?.hourly_rate) || 20}
                                            experience={`${nanny.nanny_details?.experience_years || 0} years`}
                                            distance={nanny.distance}
                                            variant={getVariant(index)}
                                            tags={['Full-time', 'Child Care', 'Verified']} // Mock tags for now
                                            onViewProfile={() => window.location.href = `/caregiver/${nanny.id}`}
                                            onBook={() => window.location.href = `/caregiver/${nanny.id}?book=true`}
                                        />
                                    ))}
                                </div>
                            )}
                        </div>
                    </div>
                </main>

                {/* Mobile Filter Drawer (Simple Overlay for now) */}
                {showMobileFilters && (
                    <div className="fixed inset-0 z-50 bg-black/50 md:hidden" onClick={() => setShowMobileFilters(false)}>
                        <div className="absolute right-0 top-0 bottom-0 w-[300px] bg-white p-4 overflow-y-auto" onClick={e => e.stopPropagation()}>
                            <div className="flex justify-between items-center mb-4">
                                <h3 className="text-xl font-bold">Filters</h3>
                                <button onClick={() => setShowMobileFilters(false)} className="p-2">âœ•</button>
                            </div>
                            <FilterSidebar className="border-0 shadow-none p-0" />
                        </div>
                    </div>
                )}
            </div>
        </ParentLayout>
    );
}

