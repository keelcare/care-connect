"use client";

import React from 'react';
import { MapPin, Heart, Clock, Briefcase } from 'lucide-react';
import { Button } from '@/components/ui/button';

export interface ProfileCardProps {
    name: string;
    role?: string;
    rating?: number;
    reviewCount?: number;
    location: string;
    description?: string;
    hourlyRate: number;
    experience?: string;
    isVerified?: boolean;
    distance?: number;
    onViewProfile?: () => void;
    onBook?: () => void;
    variant?: 'purple' | 'blue' | 'green' | 'pink';
    tags?: string[];
}

export const ProfileCard: React.FC<ProfileCardProps> = ({
    name,
    role = "Caregiver",
    location,
    hourlyRate,
    experience,
    distance,
    onViewProfile,
    onBook,
    variant = 'purple',
    tags = ['Full-time', 'Hybrid']
}) => {
    const variants = {
        purple: {
            bg: 'bg-[#EDE9FE]', // violet-100ish
            button: 'bg-[#1E1B4B] hover:bg-[#312E81] text-white',
            border: 'border-[#DDD6FE]',
            icon: 'bg-white text-[#1E1B4B]'
        },
        blue: {
            bg: 'bg-[#DBEAFE]', // blue-100
            button: 'bg-[#172554] hover:bg-[#1E3A8A] text-white',
            border: 'border-[#BFDBFE]',
            icon: 'bg-white text-[#172554]'
        },
        green: {
            bg: 'bg-[#DCFCE7]', // green-100
            button: 'bg-[#052E16] hover:bg-[#064E3B] text-white',
            border: 'border-[#BBF7D0]',
            icon: 'bg-white text-[#052E16]'
        },
        pink: {
            bg: 'bg-[#FCE7F3]', // pink-100
            button: 'bg-[#500724] hover:bg-[#831843] text-white',
            border: 'border-[#FBCFE8]',
            icon: 'bg-white text-[#500724]'
        }
    };

    const style = variants[variant];

    return (
        <div className={`rounded-[32px] p-6 flex flex-col h-full transition-all duration-300 hover:shadow-lg hover:-translate-y-1 ${style.bg} ${style.border}`}>
            {/* Header: Rate */}
            <div className="flex justify-between items-start mb-6">
                <h3 className="text-3xl font-bold text-neutral-900">
                    ₹{hourlyRate}<span className="text-lg font-medium text-neutral-600">/hr</span>
                </h3>
            </div>

            {/* Role & Name */}
            <div className="mb-6">
                <h4 className="text-xl font-bold text-neutral-900 mb-1">{role}</h4>
                <p className="text-neutral-600 font-medium">{name}</p>
            </div>

            {/* Location & Details */}
            <div className="space-y-3 mb-8">
                <div className="flex items-center gap-2 text-neutral-700">
                    <MapPin size={18} />
                    <span className="font-medium">{location}</span>
                </div>
                <div className="flex items-center gap-2 text-neutral-600 text-sm">
                    <Clock size={16} />
                    <span>{experience} experience</span>
                    {distance !== undefined && (
                        <>
                            <span>•</span>
                            <span>{distance.toFixed(1)} km away</span>
                        </>
                    )}
                </div>
            </div>

            {/* Tags */}
            <div className="flex flex-wrap gap-2 mb-8 mt-auto">
                {tags.map((tag, i) => (
                    <span key={i} className="px-4 py-2 rounded-full bg-white/60 border border-white/40 text-sm font-medium text-neutral-800">
                        {tag}
                    </span>
                ))}
            </div>

            {/* Actions */}
            <div className="flex gap-3 mt-4">
                <Button
                    onClick={onBook}
                    className={`flex-1 rounded-2xl h-12 font-bold text-base shadow-none ${style.button}`}
                >
                    Book now
                </Button>
                <button className={`w-12 h-12 rounded-2xl flex items-center justify-center transition-colors ${style.icon} hover:bg-white/80`}>
                    <Heart size={20} />
                </button>
            </div>
        </div>
    );
};
